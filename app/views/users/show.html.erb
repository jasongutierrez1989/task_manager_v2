<h1><%= @user.name %>'s Profile</h1>

<h4><%= @user.email %></h4>
<h4><%= @user.job %></h4>

<% if @user.tasks %>
<h3>Tasks:</h3>
<ul>
  <% @user.tasks.each do |a| %>
    <li><%= link_to a.name, location_task_path(a.id, a) %></li>
  <% end %>
</ul>
<% end %>

<% if (current_user.id == @user.id && logged_in?) || current_user.admin? %>
  <br><%= link_to "Edit Profile", edit_user_path(@user) %></br>
<% end %>
