<% if @location.errors.any? %>
  <% @location.errors.full_messages.each do |msg| %>
    <%= msg %><br>
  <% end %>
<% end %>
<div class="field_with_errors">
<%= form_for @location do |f| %>
<%= f.label :name %>
<br><%= f.text_field :name %><br>
<%= f.label :description %>
<br><%= f.text_area :description %><br>
<br><%= f.submit %></br>
<% end %>
</div>
